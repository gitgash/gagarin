<!-- Обернуть всё в класс а потом дивами распределить картинки и сделать ссылками на result[:url] -->
<div class="l-projects l-projects_shadow">
  <h2 class="b-head b-head_video">
  <a class="b-head__link" href="http://video.sputnik.ru/">Видео</a>
  </h2>

  <% unless results.blank? %>
    <% results.each do |result| %>
      <div class="pic">
        <a href="<%=result[:url].text %>" target="_self"><img src="<%=result[:image_url]%>" width="100px" height="100px" style="padding:5px 5px 5px 5px;"/></a>
      </div>
    <% end %>
  <% else %>
    <%= render :partial => "page_no_results" %>
  <% end %>

  <h2 class="b-head b-head_blogs">
    <input type="button" value="Назад" onClick="back()">
  </h2>
</div>
